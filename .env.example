# Server
PORT=3000
NODE_ENV=development

# Auth
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d

# Optional: one-time endpoint to promote a user to admin
ADMIN_SETUP_TOKEN=

# Database
DB_DIALECT=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=daily-aches
DB_USER=postgres
DB_PASSWORD=123456
DB_SCHEMA=dailyaches_api

# Optional alternative: PostgreSQL connection string (takes precedence if set)
# POSTGRES_URL="postgres://postgres:123456@127.0.0.1:5432/dailyaches"
POSTGRES_URL=

# CORS origin for your mobile app / web clients
# Example: CORS_ORIGIN="http://localhost:19006"
# Use "*" for development only.
CORS_ORIGIN=*
